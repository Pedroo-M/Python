continu = True
class aluno:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade

    def apresentar(self):
        print(f"Ola, meu nome e {self.nome} e tenho {self.idade} anos")

    def fazer_aniversario(self):
        self.idade = self.idade + 1

p1 = aluno("Mariana", 18)
p1.apresentar()
while continu:
    yn = input("Quer continuar? S/N")
    if yn.lower() == "n":
        continu = False
    else:
        p1.fazer_aniversario()
        p1.apresentar()
